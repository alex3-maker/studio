  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:z3w7v%25Twu%26%28%29@db.ukevxalsfdtrfksdksux.supabase.co:5432/postgres"
